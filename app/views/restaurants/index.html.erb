<p style="color: green"><%= notice %></p>

<%= link_to "Check the top restaurants in your area!",
restaurants_path,
class: "btn btn-outline-secondary" %>

<%= simple_form_for '', method: :get do |f| %>
  <%= f.input :rating, label: false %>
  <%= f.submit "FILTER!", name: nil %>
<% end %>

<h1>Restaurants</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <ul>
      <li><%= link_to restaurant.name, restaurant_path(restaurant.id) %></li>
    </ul>
  <% end %>
</div>

<%= link_to "New restaurant", new_restaurant_path %>
